<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game of Life" Height="600" Width="600">
    <Grid>
        <Canvas Name="GameCanvas" Background="White"
                MouseDown="GameCanvas_MouseDown"
                MouseMove="GameCanvas_MouseMove"/>
        <Button Name="StartStopButton" Content="Start" Width="100" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10" Click="StartStopButton_Click"/>
    </Grid>
</Window>
